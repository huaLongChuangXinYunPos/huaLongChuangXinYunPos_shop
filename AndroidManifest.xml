<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shop.hlcloundposproject"
    android:versionCode="1"
    android:versionName="hl_posClound_1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17"
        tools:ignore="OldTargetApi" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 二維碼權限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.shop.hlcloundposproject.activity.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shop.hlcloundposproject.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/main_label"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity
            android:name="comcom.shop.hlcloundposproject.activity.LoginActivity" 
            android:label="@string/login_lable"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustResize" />

        <!-- 二維碼 -->
        <activity
            android:name="com.mining.app.zxing.MipcaActivityCapture"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_scan_code_bar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="comcom.shop.hlcloundposproject.activity.QueryGoodsActivity"
            android:label="@string/title_activity_query_goods" >
        </activity>
    </application>

</manifest>
